{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "rules": {
    "strict": 0,
    "no-undef": [
      0
    ],
    "import/prefer-default-export": "off",
    "no-console": "off",
    "max-len": [
      1,
      90,
      2,
      {"ignoreComments": true
      }
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "import/no-named-as-default": "off",
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "no-nested-ternary": 0,
    "function-paren-newline": [
      "error",
      "multiline"
    ],
    "curly": [
      "error",
      "multi-line"
    ],
    "camelcase": "off",
    "quotes": [
      "error",
      "single"
    ],
    "camelcase": "off",
    "no-return-assign": "off",
    "globals": {
      "localStorage": true,
      "document": true,
      "require": true,
      "window": true,
      "fetch": true
    },
    "import/no-unresolved": [
      2,
      {
        "commonjs": true
      }
    ],
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": [
          "componentDidMount",
          "componentWillUnmount"
        ]
      }
    ]
  }
}